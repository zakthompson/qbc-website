---
import SkewedBackground from "./SkewedBackground.astro";

interface Props {
  overlayColor: string;
}

const { overlayColor } = Astro.props;
---

<style define:vars={{ overlayColor }}>
  .hero-image {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 90vh;
    color: #fff;
    background-attachment: fixed;
    background-image: url("../images/hero.jpg");
    background-size: cover;
    background-position: center;
  }

  .overlay {
    background-color: var(--overlayColor);
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
  }

  .title-wrap {
    text-align: center;
    z-index: 1;
  }

  @media only screen and (max-width: 1024px) {
    .service-time {
      font-size: 1.6rem;
    }
  }
</style>

<div class="hero-image">
  <div class="overlay"></div>
  <div class="title-wrap">
    <SkewedBackground color="#222" offset={-75}>
      <h1>Service</h1>
    </SkewedBackground>
    <SkewedBackground color="#555" offset={75}>
      <h1>Archive</h1>
    </SkewedBackground>
  </div>
</div>
